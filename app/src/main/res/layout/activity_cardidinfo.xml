<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_e8"
    android:orientation="vertical">

    <include layout="@layout/view_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_margin="20dp"
            android:background="@drawable/cardinfo_bg">

            <ImageView
                android:id="@+id/cardidinfo_bank_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/head_bg" />

            <TextView
                android:id="@+id/cardidinfo_bank_name"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/cardidinfo_bank_logo"
                android:text="银行名称"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/cardidinfo_cardid_hint"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="70dp"
                android:gravity="center"
                android:text="**** **** **** "
                android:textColor="@color/gray_e8"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/cardidinfo_cardid"
                android:layout_marginBottom="25dp"
                android:layout_alignParentBottom="true"
                android:layout_toRightOf="@+id/cardidinfo_cardid_hint"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:text="卡后四位"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>
    </LinearLayout>
</LinearLayout>