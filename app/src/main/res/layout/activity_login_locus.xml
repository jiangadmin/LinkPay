<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/login_head"
        android:layout_width="@dimen/login_head_size"
        android:layout_height="@dimen/login_head_size"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/ic_logo" />

    <TextView
        android:id="@+id/login_phone_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp" />

    <com.linkpay.View.LocusPassWordView
        android:id="@+id/login_locus_pwd"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/login_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="40dp"
        android:background="@color/transparent"
        android:padding="10dp"
        android:text="切换账号"
        android:textColor="@color/style_color"
        android:textSize="18sp" />
</LinearLayout>