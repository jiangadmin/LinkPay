<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2b41"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/home_nav_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:baselineAligned="false"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_head_image" />


        <TextView
            android:id="@+id/home_nav_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="账户名"
            android:textColor="@color/home_nav_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/home_nav_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="12345678910"
            android:textColor="@color/home_nav_text_color"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="6"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <LinearLayout
            android:id="@+id/home_nav_idcard"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_h"
            android:gravity="center_vertical"
            android:onClick="IDCard"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/et_h"
                android:layout_height="@dimen/et_h"
                android:background="@color/transparent"
                android:src="@drawable/ic_home_nav_idcard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/home_nav_idcard"
                android:textColor="@color/home_nav_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/home_nav_idcard_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="@color/home_nav_text_color"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="@dimen/et_h"
                android:layout_height="@dimen/et_h"
                android:layout_marginRight="6dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_menu_in" />

        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#646475" />

        <LinearLayout
            android:id="@+id/home_nav_cardid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_h"
            android:gravity="center_vertical"
            android:onClick="CardIDInfo"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/et_h"
                android:layout_height="@dimen/et_h"
                android:background="@color/transparent"
                android:src="@drawable/ic_home_nav_cardid" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/home_nav_cardid"
                android:textColor="@color/home_nav_text_color"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="@color/home_nav_text_color"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/et_h"
                android:layout_height="@dimen/et_h"
                android:layout_marginRight="6dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_menu_in" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#646475" />

        <LinearLayout
            android:id="@+id/home_nav_setting"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_h"
            android:gravity="center_vertical"
            android:onClick="Setting"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/et_h"
                android:layout_height="@dimen/et_h"
                android:background="@color/transparent"
                android:src="@drawable/ic_home_nav_setting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/home_nav_more"
                android:textColor="@color/home_nav_text_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/home_nav_setting_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="right|center_vertical"
                android:textColor="@color/home_nav_text_color"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="@dimen/et_h"
                android:layout_height="@dimen/et_h"
                android:layout_marginRight="6dp"
                android:background="@color/transparent"
                android:src="@drawable/ic_menu_in" />

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#646475" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#646475" />

    <LinearLayout
        android:id="@+id/home_nav_exit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_h"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="16dp"
        android:gravity="center_vertical"
        android:onClick="Exit"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/et_h"
            android:layout_height="@dimen/et_h"
            android:background="@color/transparent"
            android:src="@drawable/ic_home_nav_exit" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="@string/home_nav_exit"
            android:textColor="@color/home_nav_text_color"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>