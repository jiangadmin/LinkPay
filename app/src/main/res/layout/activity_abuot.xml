<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_e8"
    android:orientation="vertical">

    <include layout="@layout/view_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/login_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/app_name"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="1.0.0"
            android:textSize="20sp" />
        <!--去评分-->
        <LinearLayout
            android:onClick="去评分"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_et_h"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_wg"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="去评分"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="@dimen/et_h"
                android:layout_height="@dimen/et_h"
                android:src="@drawable/ic_menu_in" />
        </LinearLayout>

        <!--功能介绍-->
        <LinearLayout
            android:onClick="功能介绍"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_et_h"
            android:layout_marginTop="1dp"
            android:background="@drawable/btn_wg"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="功能介绍"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="@dimen/et_h"
                android:layout_height="@dimen/et_h"
                android:src="@drawable/ic_menu_in" />
        </LinearLayout>
        <!--投诉-->
        <LinearLayout
            android:onClick="投诉"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_et_h"
            android:layout_marginTop="1dp"
            android:background="@drawable/btn_wg"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="投诉"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="@dimen/et_h"
                android:layout_height="@dimen/et_h"
                android:src="@drawable/ic_menu_in" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>